<?php
// Mulai session
if (session_status() === PHP_SESSION_NONE) {
    session_start();
}

// Jika sudah login, lempar ke index.php
if (isset($_SESSION['logged_in']) && $_SESSION['logged_in'] === true) {
    header('Location: index.php');
    exit;
}

// Load file-file yang diperlukan
require_once 'includes/config.php';
require_once 'includes/functions.php';

$error_message = '';
$success_message = '';

// Proses form registrasi
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $username = $_POST['username'] ?? '';
    $password = $_POST['password'] ?? '';
    $password_confirm = $_POST['password_confirm'] ?? '';

    // Validasi Sederhana
    if (empty($username) || empty($password) || empty($password_confirm)) {
        $error_message = 'Semua field wajib diisi!';
    } elseif ($password !== $password_confirm) {
        $error_message = 'Password dan Konfirmasi Password tidak cocok!';
    } elseif (strlen($password) < 6) {
        $error_message = 'Password minimal harus 6 karakter!';
    } else {
        try {
            $db = db_connect();

            // 1. Cek apakah username sudah ada
            $stmt = $db->prepare("SELECT id FROM users WHERE username = ?");
            $stmt->execute([$username]);
            
            if ($stmt->fetch()) {
                $error_message = 'Username ini sudah terdaftar. Silakan pilih yang lain.';
            } else {
                // 2. Username tersedia, hash password (SANGAT PENTING)
                $hashed_password = password_hash($password, PASSWORD_DEFAULT);

                // 3. Masukkan ke database
                $stmt = $db->prepare("INSERT INTO users (username, password) VALUES (?, ?)");
                $stmt->execute([$username, $hashed_password]);

                // Redirect ke halaman login dengan pesan sukses
                header('Location: login.php?status=registered');
                exit;
            }
        } catch (PDOException $e) {
            $error_message = 'Database error: ' . $e->getMessage();
        }
    }
}
